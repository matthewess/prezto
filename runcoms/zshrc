# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/base16-eighties.dark.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
 
# Customize to your needs...
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
EDITOR=vim
VISUAL=vim

eval $(thefuck --alias)

# Aliases

alias jtest="java org.junit.runner.JUnitCore"
alias php-osx="/usr/bin/php"
alias csc="sshfs -o IdentityFile=~/.ssh/id_rsa mess@xinu08.cs.purdue.edu: ~/Documents/cslab && cd ~/Documents/cslab"
alias csd="cd ~ && diskutil umount ~/Documents/cslab"
alias sbdir="cd ~/Library/Application\ Support/Steam/steamapps/common/Starbound/"
alias sublime="open -a \"Sublime Text\""
alias rsync="noglob rsync -azvh"
alias sidebyside="pr -w $COLUMNS -m -t"
alias sbs="sidebyside"
alias dc="docker-compose"
alias dcl="docker-compose logs"
alias dm="docker-machine"

#print info about a file
pm() {
    stat -f "%N: %A %Sp %z bytes" $@;
}

#search for a git alias
galias() {
    alias | ack "git $@";
}

#set up a docker terminal
dterm() {
    docker-machine start default
    eval $(docker-machine env default)
}

#remind me to use ack instead of grep!
grep() {
    echo "Use ack!"
}

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"
